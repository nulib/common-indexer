{
  "properties": {
    "full_text": {
      "type": "text"
    },
    "abstract": {
      "type": "text",
      "copy_to": "full_text"
    },
    "admin_set": {
      "type": "nested",
      "properties": {
        "id": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "copy_to": ["full_text", "admin_set_facet"]
        }
      }
    },
    "caption": {
      "type": "text",
      "copy_to": "full_text"
    },
    "collection": {
      "type": "nested",
      "properties": {
        "id": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "copy_to": ["full_text", "collection_facet"]
        }
      }
    },
    "contributor": {
      "type": "nested",
      "properties": {
        "role": {
          "type": "keyword"
        },
        "uri": {
          "type": "keyword"
        },
        "label": {
          "type": "text",
          "copy_to": ["full_text", "contributor_facet"]
        }
      }
    },
    "creator": {
      "type": "nested",
      "properties": {
        "uri": {
          "type": "keyword"
        },
        "label": {
          "type": "text",
          "copy_to": ["full_text", "creator_facet"]
        }
      }
    },
    "date": {
      "type": "text"
    },
    "description": {
      "type": "text"
    },
    "keyword": {
      "type": "keyword",
      "copy_to": "full_text"
    },
    "language": {
      "type": "nested",
      "properties": {
        "uri": {
          "type": "keyword"
        },
        "label": {
          "type": "text",
          "copy_to": ["full_text", "language_facet"]
        }
      }
    },
    "location": {
      "type": "geo_point"
    },
    "permalink": {
      "type": "keyword"
    },
    "provenance": {
      "type": "text"
    },
    "publisher": {
      "type": "text",
      "copy_to": "publisher_facet"
    },
    "rights_holder": {
      "type": "text"
    },
    "source": {
      "type": "text"
    },
    "subject": {
      "type": "nested",
      "properties": {
        "role": {
          "type": "keyword"
        },
        "uri": {
          "type": "keyword"
        },
        "label": {
          "type": "text",
          "copy_to": ["full_text", "subject_facet"]
        }
      }
    },
    "title": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "text",
          "copy_to": "full_text"
        },
        "alternate": {
          "type": "text",
          "copy_to": "full_text"
        }
      }
    },
    "visibility": {
      "type": "keyword",
      "copy_to": "visibility_facet"
    },
    "expanded_date": {
      "type": "date"
    },
    "year": {
      "type": "integer"
    },
    "extra_fields": {
      "type": "nested"
    }
  },
  "dynamic_templates": [
    {
      "facets": {
        "match":   "*_facet",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "nested": {
        "match": "*_nested",
        "mapping": {
          "type": "nested"
        }
      }
    }
  ]
}
