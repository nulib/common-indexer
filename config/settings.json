{
  "settings": {
    "analysis": {
      "analyzer": {
        "phrase_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        },
        "keyword_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "english_stop"
          ]
        }
      },
      "filter": {
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "phrase_analyzer",
        "search_analyzer": "keyword_analyzer",
        "search_quote_analyzer": "phrase_analyzer"
      }
    }
  }
}